<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imvAvatar1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/anh"/>
            <TextView
                android:id="@+id/txtNameUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Person 1"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/imvSao2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/sao"
            />
        <TextView
            android:id="@+id/txtContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/decription"
            android:textColor="@color/black"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imvAvatar2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/anh"/>
            <TextView
                android:id="@+id/txtNameUser2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Person 2"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/imvSao3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/sao"
            />
        <TextView
            android:id="@+id/txtContent2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/decription"
            android:textColor="@color/black"
            android:textSize="15sp"/>
    </LinearLayout>

</LinearLayout>